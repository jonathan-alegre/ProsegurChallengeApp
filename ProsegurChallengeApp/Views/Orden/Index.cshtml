@model ProsegurChallengeApp.Models.Orden

@{
    ViewData["Title"] = "Crear Orden";
}

<h1>Crear Orden</h1>

<h4>Orden</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProvincia" class="control-label"></label>
                <select class="form-control" asp-items="@(new SelectList(ViewBag.Provincias, "Value", "Text"))" asp-for="IdProvincia"></select>
                <span asp-validation-for="IdProvincia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdItem" class="control-label"></label>
                <select class="form-control" asp-items="@(new SelectList(Model.Items, "Id", "Descripcion"))" asp-for="IdItem" multiple="multiple"></select>
                <span asp-validation-for="IdItem" class="text-danger"></span>                
            </div>
            <div class="form-group">
                <label asp-for="ImporteTotal" class="control-label"></label>                
                <span asp-validation-for="ImporteTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crar Orden" class="btn btn-primary" asp-action="CrearOrden" asp-controller="Orden"/>
            </div>
        </form>
    </div>
</div>

<script>

    $(function () {

        $('#SelectedYear').multiselect({

            includeSelectAllOption: true
        });

    });

</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync( "_ValidationScriptsPartial" );
    }

}
