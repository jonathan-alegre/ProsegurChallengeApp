@model ProsegurChallengeApp.Models.Usuario

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Crear Usuario";
}

<h1>CrearUsuario</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Usuario" asp-action="CrearUsuario">
            <div class="form-group">
                <label>Nombre Usuario</label>
                <input type="text" class="form-control" id="txtNombre" placeholder="Ingrese Nombre" asp-for="Nombre">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" class="form-control" id="txtPassword" placeholder="Ingrese Contraseña" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>           
            <button type="submit" class="btn btn-primary">Crear</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}